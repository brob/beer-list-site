---

const { title } = Astro.props
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="container max-w-6xl mx-auto p-4">

		<header>
			<h1 class="text-3xl mb-10"><a href="/">Beer List</a></h1>
		</header>
		<slot />
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>

<style is:global>
	.sortable thead tr {
  position: sticky;
  top: 0;
  z-index: 1;
}
.sortable thead th {
	cursor: pointer;
}
.sortable thead th:hover {
	background-color: #f1f1f1;
}
	.sortable [aria-sort] {
		background-color:beige;
		background-color: #f1f1f1;

	}
	.sortable thead th:not(.no-sort)::after {
    margin-left: 3px;
    content: "▸";
}
.sortable thead th:not(.no-sort)[aria-sort=descending]::after {
    color: inherit;
    content: "▾";
}
.sortable thead th:not(.no-sort)[aria-sort=ascending]::after {
    color: inherit;
    content: "▴";
}
</style>